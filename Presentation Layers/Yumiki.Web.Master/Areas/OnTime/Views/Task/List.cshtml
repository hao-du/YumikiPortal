@{
    Layout = null;
    ViewBag.Title = "Phases";
}

<div class="container">
    <h1>@ViewBag.Title</h1>
    <div class="card bg-secondary">
        <div class="card-body p-2">
            <div class="btn-group">
                <a href="#" (click)="onSelect(null)" class="btn btn-primary">Add</a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-sm table-striped table-bordered table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th></th>
                            <th>
                                Task Name
                            </th>
                            <th>
                                Project
                            </th>
                            <th>
                                Phase
                            </th>
                            <th>
                                Status
                            </th>
                            <th>
                                Descriptions
                            </th>
                            <th>
                                Last Update
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr *ngFor="let task of tasks" [class.selected]="task === selectedTask">
                            <td>
                                <a href="#" (click)="onSelect(task)" title="Edit"><span class="fa fa-edit"></span></a>
                            </td>
                            <td>
                                {{task.TaskName}}
                            </td>
                            <td>
                                {{task.ProjectName}}
                            </td>
                            <td>
                                {{task.PhaseName}}
                            </td>
                            <td>
                                {{task.StatusUI}}
                            </td>
                            <td>
                                {{task.TaskDescriptions}}
                            </td>
                            <td>
                                {{task.LastUpdateDateUI}}
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<task-submit [task]="selectedTask" (messageEvent)="onRefreshData($event)"></task-submit>