@{
    Layout = null;
}

<div class="container">
    <h1>{{title}}</h1>
    <div class="card bg-secondary">
        <div class="card-body p-2">
            <div class="btn-group">
                <button class="btn" (click)="onClose()">Back</button>
                <a href="#" routerLink="/Submit" class="btn btn-primary">Add</a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-sm table-striped table-bordered table-hover">
                    <thead class="thead-dark">
                        <tr>
                            <th></th>
                            <th>
                                Task Name
                            </th>
                            <th>
                                Project
                            </th>
                            <th>
                                Phase
                            </th>
                            <th>
                                Priority
                            </th>
                            <th>
                                Status
                            </th>
                            <th>
                                Descriptions
                            </th>
                            <th>
                                Last Update
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr *ngFor="let task of tasks">
                            <td>
                                <a href="#" routerLink="/Submit/{{task.ID}}" title="Edit"><span class="fa fa-edit"></span></a>
                            </td>
                            <td>
                                {{task.TaskName}}
                            </td>
                            <td>
                                {{task.ProjectName}}
                            </td>
                            <td>
                                {{task.PhaseName}}
                            </td>
                            <td>
                                {{task.PriorityUI}}
                            </td>
                            <td>
                                {{task.StatusUI}}
                            </td>
                            <td>
                                {{task.TaskDescriptions}}
                            </td>
                            <td>
                                {{task.LastUpdateDateUI}}
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>