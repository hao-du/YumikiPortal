@using Yumiki.Web.MoneyTrace.Constants
@using Yumiki.Commons.Dictionaries;
@using Yumiki.Entity.MoneyTrace;
@using SquishIt.Framework;

@{
    ViewBag.Title = "Currency";
}

@section Script{
    @MvcHtmlString.Create(
        Bundle.JavaScript()
        .Add("~/Areas/MoneyTrace/clients/scripts/yumiki-money-trace.js")
        .Add("~/Areas/MoneyTrace/clients/scripts/yumiki-money-trace-currency.js")
        .WithMinifier(new SquishIt.Framework.Minifiers.JavaScript.JsMinMinifier())
        .Render("~/cache/yumiki_#.js"))

    <script type="text/javascript">
        yumiki.moneyTrace.currency.initCurrency(
            {
                '@CommonProperties.ID': undefined,
                '@TB_Currency.FieldName.CurrencyName': '',
                '@TB_Currency.FieldName.CurrencyShortName': '',
                '@TB_Currency.FieldName.IsShareable': false,
                '@CommonProperties.IsActive': true
            },
            '@Url.HttpRouteUrl(RouteNames.CurrencyGetAll, null)',
            '@Url.HttpRouteUrl(RouteNames.CurrencyGetByID, null)',
            '@Url.HttpRouteUrl(RouteNames.CurrencySave, null)',
            '@Yumiki.Commons.Logging.LogLevel.ERROR'
        );
    </script>
}
<div ng-app="currency">
    <div class="container" ng-controller="currencyController" ng-init="loadData();">
        <h2>Currency</h2>
        <div class="well well-sm">
            <div class="btn-group">
                <button type="button" class="btn btn-primary" ng-click="showDialog();">Add</button>
                <button type="button" class="btn btn-default" ng-click="loadDataWithStatus();">{{inactiveButtonName}}</button>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table id="tblCurrency" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Currency Name</th>
                                <th>Short Name</th>
                                <th>Descriptions</th>
                                <th>Shareable</th>
                                <th>Active Status</th>
                                <th>Modify Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="currency in currencyList">
                                <td><a href="#" id="btnEdit" ng-click="showDialog(currency.@CommonProperties.ID);"><span class="fa fa-edit"></span></a></td>
                                <td>{{ currency.@TB_Currency.FieldName.CurrencyName }}</td>
                                <td>{{ currency.@TB_Currency.FieldName.CurrencyShortName }}</td>
                                <td>{{ currency.@CommonProperties.Descriptions }}</td>
                                <td><input type="checkbox" ng-checked="{{ currency.@TB_Currency.FieldName.IsShareable }}" disabled="disabled" /></td>
                                <td><input type="checkbox" ng-checked="{{ currency.@CommonProperties.IsActive }}" disabled="disabled" /></td>
                                <td>{{ currency.@CommonProperties.LastUpdateDateUI }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div id="dlgCurrency" class="modal fade" role="dialog" ng-controller="currencyDialogController">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <form name="currencyForm" ng-submit="save(currencyForm.$valid)" novalidate>
                    <div class="modal-header">
                        <h4 class="modal-title">{{ dialogTitle }}</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group" ng-class="{ 'has-error' : currencyForm.currencyName.$invalid }">
                            <label>Currency Name</label>
                            <input type="text" name="currencyName" ng-model="currency.@TB_Currency.FieldName.CurrencyName" class="form-control" ng-required="true" />
                            <p ng-show="currencyForm.currencyName.$error.required && currencyForm.currencyName.$dirty" class="help-block">Currency Name is required.</p>
                        </div>
                        <div class="form-group" ng-class="{ 'has-error' : currencyForm.currencyShortName.$invalid }">
                            <label>Currency Short Name</label>
                            <input type="text" name="currencyShortName" ng-model="currency.@TB_Currency.FieldName.CurrencyShortName" class="form-control" ng-required="true" ng-minlength="3" ng-maxlength="4" />
                            <p ng-show="currencyForm.currencyShortName.$error.required && currencyForm.currencyShortName.$dirty" class="help-block">Currency Short Name is required.</p>
                            <p ng-show="currencyForm.currencyShortName.$error.minlength" class="help-block">Currency Short Name needs at least 3 characters.</p>
                            <p ng-show="currencyForm.currencyShortName.$error.maxlength" class="help-block">Currency Short Name exceeds maximum 4 characters.</p>
                        </div>
                        <div class="form-group">
                            <span class="checkbox">
                                <input type="checkbox" ng-model="currency.@TB_Currency.FieldName.IsShareable" ng-checked="currency.@TB_Currency.FieldName.IsShareable" />
                                <label>Is Shareable</label>
                            </span>
                        </div>
                        <div class="form-group">
                            <label>Descriptions</label>
                            <textarea ng-model="currency.@CommonProperties.Descriptions" class="form-control" rows="5"></textarea>
                        </div>
                        <div class="form-group">
                            <span class="checkbox">
                                <input type="checkbox" ng-model="currency.@CommonProperties.IsActive" ng-checked="currency.@CommonProperties.IsActive" ng-disabled="isActiveDisabled" />
                                <label>Is Active</label>
                            </span>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-default" ng-disabled="currencyForm.$invalid">Save</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

