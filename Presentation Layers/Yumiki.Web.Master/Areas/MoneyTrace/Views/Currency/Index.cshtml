@using Yumiki.Web.MoneyTrace.Constants
@{
    ViewBag.Title = "Currency";
}

@section HeaderContainer{
    <script type="text/javascript">
        var app = angular.module('moneyTrace', []);
        app.controller('currencyController', function ($scope, $http) {
            $scope.inActiveButtonName = 'Show Inactive Currency';
            $http.get('@Url.HttpRouteUrl(RouteNames.CurrencyGet, null)')
                .then(function mySucces(response) {
                    $scope.currencyList = response.data;
                }, function myError(response) {

                });
        });
    </script>
}
<div class="container" ng-app="moneyTrace" ng-controller="currencyController">
    <h2>Currency</h2>
    <div class="well well-sm">
        <div class="btn-group">
            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#dlgCurrency">Add</button>
            <button type="button" class="btn btn-primary">{{inActiveButtonName}}</button>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table id="tblCurrency" class="table table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Currency Name</th>
                            <th>Short Name</th>
                            <th>Descriptions</th>
                            <th>Active Status</th>
                            <th>Modify Date</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr ng-repeat="currency in currencyList">
                            <td>{{ currency.CurrencyName }}</td>
                            <td>{{ currency.CurrencyShortName }}</td>
                            <td>{{ currency.Descriptions }}</td>
                            <td>{{ currency.IsActive }}</td>
                            <td>{{ currency.CreateDate }}</td>
                            <td></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


