@using Yumiki.Web.MoneyTrace.Constants
@using Yumiki.Commons.Dictionaries;
@using Yumiki.Entity.MoneyTrace;
@{
    ViewBag.Title = "Transaction Type";
}

@section Script{
    <script type="text/javascript">
        //Declare constant variables.
        var showActiveTransactionTypeString = 'Show Active List';
        var showInactiveTransactionTypeString = 'Show Inactive List';

        var app = angular.module('moneyTrace', []);

        //Service to transfer data between controllers.
        app.factory('DataTransfer', function () {
            return { traceID: '' };
        });

        //Service to communicate with Server.
        app.service('DataService', function ($http) {
            this.getTransactionTypeList = function (showInactive) {
                return $http.get('@Url.HttpRouteUrl(RouteNames.TransactionTypeGetAll, null)', { params: { 'showInactive': showInactive } });
            };

            this.getTransactionTypeByID = function (traceID) {
                return $http.get('@Url.HttpRouteUrl(RouteNames.TransactionTypeGetByID, null)', { params: { 'traceID': traceID } });
            };

            this.save = function (trace) {
                return $http.post('@Url.HttpRouteUrl(RouteNames.TransactionTypeGetSave, null)', trace);
            };
        });

        //Controller to display items' list
        app.controller('traceController', function ($scope, $rootScope, $http, DataService, DataTransfer) {
            $scope.inactiveButtonName = showInactiveTransactionTypeString;

            //To determine when load active or inactive list.
            $scope.isStatusChanged = false;

            //Display Dialog and pass data to Dialog.
            $scope.showDialog = function (traceID) {
                //Call DialogController
                $rootScope.$broadcast("OnLoad", traceID);
            }

            //Event for other controllers to reload data.
            $rootScope.$on('OnReloadData', function (event) {
                $scope.loadData();
            });

            //Load active or inactive list.
            $scope.loadData = function () {
                var showInactive = true;
                if ($scope.inactiveButtonName == showInactiveTransactionTypeString) {
                    showInactive = false;
                }

                if ($scope.isStatusChanged) {
                    showInactive = !showInactive;
                }

                $(this).showLoadingBar();
                DataService.getTransactionTypeList(showInactive).then(
                    function mySucces(response) {
                        $scope.traceList = response.data;

                        if ($scope.isStatusChanged) {
                            if ($scope.inactiveButtonName == showInactiveTransactionTypeString) {
                                $scope.inactiveButtonName = showActiveTransactionTypeString;
                            } else {
                                $scope.inactiveButtonName = showInactiveTransactionTypeString;
                            }
                            $scope.isStatusChanged = false;
                        }
                        $(this).hideLoadingBar();
                    }, function myError(response) {
                        $scope.isStatusChanged = false;
                        $(this).hideLoadingBar();

                        clientMessage(response.data, '', '@Yumiki.Commons.Logging.LogLevel.ERROR');
                    });
            };

            //When click on "ShowInActiveButton", reload data with active status.
            $scope.loadDataWithStatus = function () {
                $scope.isStatusChanged = true;
                $scope.loadData();
            }
        });

        //Controller to display dialog
        app.controller('traceDialogController', function ($scope, $rootScope, $http, DataService, DataTransfer) {
            $scope.traceID = undefined;
            $scope.isActiveDisabled = false;

            //Used to be called by other controllers.
            $rootScope.$on('OnLoad', function (event, traceID) {
                $('#dlgTransactionType').modal({ backdrop: 'static' });

                if (traceID != undefined && traceID != null) {
                    $scope.traceID = traceID;
                    $scope.isActiveDisabled = false;
                    $scope.dialogTitle = "Edit Transaction Type";

                    $(this).showLoadingBar();

                    DataService.getTransactionTypeByID($scope.traceID)
                        .then(function mySucces(response) {
                            $scope.trace = response.data;
                            $(this).hideLoadingBar();
                        }, function myError(response) {
                            $(this).hideLoadingBar();

                            clientMessage(response.data, '', '@Yumiki.Commons.Logging.LogLevel.ERROR');
                        });

                } else {
                    $scope.dialogTitle = "New Transaction Type";
                    $scope.isActiveDisabled = true;

                    $scope.trace = $scope.resetTransactionType();
                }
            });

            //Reset object in new mode.
            $scope.resetTransactionType = function () {
                $scope.traceForm.$setPristine();
                return {
                    '@CommonProperties.ID': undefined,
                    '@TB_TransactionType.FieldName.TransactionTypeName': '',
                    '@TB_TransactionType.FieldName.IsIncome': false,
                    '@TB_TransactionType.FieldName.IsTransfer': false,
                    '@CommonProperties.Descriptions': '',
                    '@CommonProperties.IsActive': true
                };
            }

            //Save new or update object
            $scope.save = function (isValid) {
                if (isValid) {
                    $(this).showLoadingBar();
                    DataService.save($scope.trace)
                        .then(function mySucces(response) {
                            $scope.traceID = undefined;
                            $('#dlgTransactionType').modal('hide');

                            $scope.ReloadData();
                        }, function myError(response) {
                            $(this).hideLoadingBar();

                            clientMessage(response.data, '', '@Yumiki.Commons.Logging.LogLevel.ERROR');
                        });
                }
            };

            //After saving, reload list.
            $scope.ReloadData = function () {
                $rootScope.$broadcast("OnReloadData");
            };
        });
    </script>
}
<div ng-app="moneyTrace">
    <div class="container" ng-controller="traceController" ng-init="loadData();">
        <h2>Transaction Type</h2>
        <div class="well well-sm">
            <div class="btn-group">
                <button type="button" class="btn btn-primary" ng-click="showDialog();">Add</button>
                <button type="button" class="btn btn-primary" ng-click="loadDataWithStatus();">{{inactiveButtonName}}</button>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table id="tblTransactionType" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>Transaction Type Name</th>
                                <th>Income Type?</th>
                                <th>Transfer Type?</th>
                                <th>Descriptions</th>
                                <th>Active Status</th>
                                <th>Modify Date</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="trace in traceList">
                                <td>{{ trace.@TB_TransactionType.FieldName.TransactionTypeName }}</td>
                                <td><input type="checkbox" ng-checked="{{ trace.@TB_TransactionType.FieldName.IsIncome }}" disabled="disabled" /></td>
                                <td><input type="checkbox" ng-checked="{{ trace.@TB_TransactionType.FieldName.IsTransfer }}" disabled="disabled" /></td>
                                <td>{{ trace.@CommonProperties.Descriptions }}</td>
                                <td><input type="checkbox" ng-checked="{{ trace.@CommonProperties.IsActive }}" disabled="disabled" /></td>
                                <td>{{ trace.@CommonProperties.LastUpdateDateUI }}</td>
                                <td><a href="#" id="btnEdit" ng-click="showDialog(trace.@CommonProperties.ID);">Edit</a></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- Modal -->

    <div id="dlgTransactionType" class="modal fade" role="dialog" ng-controller="traceDialogController">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <form name="traceForm" ng-submit="save(traceForm.$valid)" novalidate>
                    <div class="modal-header">
                        <h4 class="modal-title">{{ dialogTitle }}</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group" ng-class="{ 'has-error' : traceForm.traceName.$invalid }">
                            <label>Transaction Type Name</label>
                            <input type="text" name="traceName" ng-model="trace.@TB_TransactionType.FieldName.TransactionTypeName" class="form-control" ng-required="true" />
                            <p ng-show="traceForm.traceName.$error.required && traceForm.traceName.$dirty" class="help-block">Transaction Type Name is required.</p>
                        </div>
                        <div class="form-group">
                            <span class="checkbox">
                                <input type="checkbox" ng-model="trace.@TB_TransactionType.FieldName.IsIncome" ng-checked="trace.@TB_TransactionType.FieldName.IsIncome" />
                                <label>Is Income Type</label>
                            </span>
                        </div>
                        <div class="form-group">
                            <span class="checkbox">
                                <input type="checkbox" ng-model="trace.@TB_TransactionType.FieldName.IsTransfer" ng-checked="trace.@TB_TransactionType.FieldName.IsTransfer" />
                                <label>Is Transfer Type</label>
                            </span>
                        </div>
                        <div class="form-group">
                            <label>Descriptions</label>
                            <textarea ng-model="trace.@CommonProperties.Descriptions" class="form-control" rows="5"></textarea>
                        </div>
                        <div class="form-group">
                            <span class="checkbox">
                                <input type="checkbox" ng-model="trace.@CommonProperties.IsActive" ng-checked="trace.@CommonProperties.IsActive" ng-disabled="isActiveDisabled" />
                                <label>Is Active</label>
                            </span>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-default" ng-disabled="traceForm.$invalid">Save</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

