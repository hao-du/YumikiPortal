@model IEnumerable<Yumiki.Web.WellCovered.Models.MD_Field>

@{
    ViewBag.Title = "Field List";
}

<div class="container">
    <h2>@ViewBag.Title</h2>
    <div class="well well-sm">
        <div class="btn-group">
            @Html.ActionLink("Add", "Create", new { }, new { @class = "btn btn-primary" })

            @{
                var hasRecords = Model.Any();
                var paramObjectID = hasRecords ? Model.First().ObjectID.ToString() : Guid.Empty.ToString();

                if (string.IsNullOrWhiteSpace(Request.Params["active"]) || bool.Parse(Request.Params["active"]))
                {
                    @Html.ActionLink("Show Inactive", "List", new { active = false, objectID = paramObjectID }, new { @class = string.Format("btn btn-default {0}", hasRecords ? string.Empty : "disabled") })
                }
                else
                {
                    @Html.ActionLink("Show Active", "List", new { active = true, objectID = paramObjectID }, new { @class = string.Format("btn btn-default {0}", hasRecords ? string.Empty : "disabled") })
                }
            }
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <tr>
                        <th></th>
                        <th>
                            @Html.DisplayNameFor(model => model.FieldName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Descriptions)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsRequired)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IsActive)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LastUpdateDateUI)
                        </th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.ID })
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FieldName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Descriptions)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsRequired)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IsActive)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LastUpdateDateUI)
                            </td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>
