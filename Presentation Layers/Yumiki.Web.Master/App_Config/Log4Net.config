<log4net>
  <root>
    <level value="OFF" />
    <appender-ref ref="YumikiAppender" />
  </root>
  
  <appender name="YumikiAppender" type="log4net.Appender.RollingFileAppender">
    <param name="File" value="C:\hdu\YP_Phase2\Presentation Layers\Yumiki.Web.Master\Logs\System.log" />
    <param name="AppendToFile" value="true" />
    <rollingStyle value="Size" />
    <maxSizeRollBackups value="10" />
    <maximumFileSize value="10MB" />
    <staticLogFileName value="true" />
    <layout type="log4net.Layout.PatternLayout">
      <param name="ConversionPattern" value="[%date] [%thread] [%level] [%logger] - %message%newline" />
    </layout>
  </appender>
</log4net>
