<nlog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <variable name="defaultLayout"
          value="${longdate}|${level:uppercase=true}|${logger}|${message}${newline}Exception Message:${newline}${exception:format=message}${newline}StackTrace:${newline}${exception:format=StackTrace}${newline}Inner Exception(s):${exception:format=Method :innerFormat=Message, StackTrace :maxInnerExceptionLevel=10}"></variable>
  <targets>
    <target name="logfile"  layout="${defaultLayout}" xsi:type="File" fileName="${basedir}/Logs/systemlog.log"
            archiveNumbering="Sequence" archiveAboveSize="10485760" archiveFileName="${basedir}/Logs/systemlog.${date:format=yyyy.MM.dd}.{####}.log" />
  </targets>
  <rules>
    <logger name="*" minlevel="Trace" writeTo="logfile" />
  </rules>
</nlog>
